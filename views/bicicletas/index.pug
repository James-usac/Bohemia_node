extends ../layout

block content 
    a(href="/bicicletas/create") Nueva bicicleta

    br
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope='col') 
                th(scope='col') 
        tbody
            each bici in bicis
                tr
                    th(scope='row') 
                     = bici.id
                     td= bici.color
                     td= bici.modelo
                     td= bici.ubicacion
                     td
                        a(href='bicicletas/' + bici.id + '/update') Editar
                     td 
                        form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                            input(type='hidden' name='id' value=bici.id)
                            input.btn(type='submit' value='Eliminar' class="btn_azul")
                        
                                