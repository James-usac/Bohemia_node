extends ../layout

block content 
	a.btn.btn-success(href='/usuarios/create') volver

	br
	br
	
	table.table
		thead
			tr
				th(scope='col') #
				th(scope='col') Nombre
				th(scope='col') Email
				th(scope='col') Verificado
				th(scope='col') 
				th(scope='col') 
		tbody
			each usuario in usuarios
				tr
					td= usuario.id
					td= usuario.nombre
					td= usuario.email
					td= usuario.verificado ? 'si' : 'no'
					td
						a(href='usuarios/' + usuario.id + '/update') Editar
					td
						form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
							input(type='hidden' name='id' value=usuario.id)
							input.btn(type='submit' value='Eliminar' class="btn_azul")